<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.baiku.android"
    android:versionCode="1"
    android:versionName="1.0" >    
    <application android:icon="@drawable/logo" android:label="@string/app_name" android:name=".BaikuApplication">  
        <activity android:name="com.baiku.android.BaikuWapActivity" android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >  
            <intent-filter>  
                <action android:name="android.intent.action.MAIN" />  
                <category android:name="android.intent.category.LAUNCHER" />  
            </intent-filter>  
        </activity>
		<activity android:name="com.baiku.android.VideoActivity" android:label="@string/app_name"
		    android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            >  
            <intent-filter>  
                <action android:name="com.baiku.android.VIDEO" />  
                <category android:name="android.intent.category.DEFAULT" />  
            </intent-filter>  
        </activity> 
		<activity android:name="com.baiku.android.VideoActivity3" android:label="@string/app_name"
		                android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            >  
            <intent-filter>  
                <action android:name="com.baiku.android.VIDEO3" />  
                <category android:name="android.intent.category.DEFAULT" />  
            </intent-filter>  
        </activity> 
        <activity android:name="com.baiku.android.AudioActivity" android:label="@string/app_name">  
            <intent-filter>  
                <action android:name="com.baiku.android.AUDIO" />  
                <category android:name="android.intent.category.DEFAULT" />  
            </intent-filter>  
        </activity>  
        <activity android:name="com.baiku.android.CameraActivity" android:label="@string/app_name" 
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            >  
            <intent-filter>  
                <action android:name="com.baiku.android.CAMERA" />  
                <category android:name="android.intent.category.DEFAULT" />  
            </intent-filter>  
        </activity>
        <activity android:name="com.baiku.android.WriteActivity" android:label="@string/app_name" 
            android:theme="@android:style/Theme.NoTitleBar">  
            <intent-filter>  
                <action android:name="com.baiku.android.WRITE" />  
                <category android:name="android.intent.category.DEFAULT" /> 
            </intent-filter>
        </activity>
        <activity android:name="com.baiku.android.UploadActivity" android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
			<intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="image/*"/>
                <data android:mimeType="video/*"/>
                <data android:mimeType="text/plain"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.baiku.android.UPLOAD" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.baiku.android.AboutActivity" android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="com.baiku.android.ABOUT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
		<activity android:name="com.baiku.android.ContactActivity" android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="com.baiku.android.CONTACT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.baiku.android.LoginActivity" android:label="@string/app_name" 
            android:windowSoftInputMode="adjustResize|stateHidden"/>
		<activity android:name="com.baiku.android.BaikuPreferenceActivity" android:label="@string/app_name"
			/>
    </application>
	<uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.RECORD_VIDEO" />  
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />  
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
	<uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"></uses-permission>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name = "android.hardware.camera.autofocus" />  
</manifest>